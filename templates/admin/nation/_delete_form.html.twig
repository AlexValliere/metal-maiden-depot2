<form method="post" action="{{ path('admin_nation_delete', {'nameSlug': nation.nameSlug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nation.nameSlug) }}">
    <button class="btn">Delete</button>
</form>