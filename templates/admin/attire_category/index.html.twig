{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}AttireCategory index{% endblock %}

{% block body %}
    <h1>AttireCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Abbreviation</th>
                <th>Name</th>
                <th>Name Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attire_category in attire_categories %}
