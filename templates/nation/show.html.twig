{% extends 'base.html.twig' %}

{% block title %}Nation{% endblock %}

{% block body %}
    <h1>Nation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ nation.name }}</td>
            </tr>
            <tr>
                <th>NameSlug</th>
                <td>{{ nation.nameSlug }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(nation, 'imageFile') }}" alt"{{ nation.name }} flag" /></td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ nation.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ nation.imageSize }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ nation.createdAt ? nation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ nation.updatedAt ? nation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('nation_index') }}">back to list</a>

    <a href="{{ path('nation_edit', {'id': nation.id}) }}">edit</a>

    {{ include('nation/_delete_form.html.twig') }}
{% endblock %}