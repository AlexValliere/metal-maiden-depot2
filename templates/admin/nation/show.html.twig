{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}Nation{% endblock %}

{% block body %}
	<h1>Nation</h1>

	<div class="container">
		<div class="row justify-content-md-center align-items-center">
			<div class="col-md-auto">
				<img src="{{ vich_uploader_asset(nation, 'imageFile') }}" alt"{{ nation.name }} flag" />
			</div>
			<div class="col">
				<table class="table">
					<tbody>
						<tr>
							<th>{{ 'label.id'|transchoice(0)|capitalize }}</th>
							<td>{{ nation.id }}</td>
						</tr>
						<tr>
							<th>{{ 'label.name'|transchoice(0)|capitalize }}</th>
							<td>{{ nation.name }}</td>
						</tr>
						<tr>
							<th>{{ 'label.name_slug'|transchoice(0)|capitalize }}</th>
							<td>{{ nation.nameSlug }}</td>
						</tr>
						<tr>
							<th>{{ 'label.image_name'|transchoice(0)|capitalize }}</th>
							<td>{{ nation.imageName }}</td>
						</tr>
						<tr>
							<th>{{ 'label.image_size'|transchoice(0)|capitalize }}</th>
							<td>{{ nation.imageSize }}</td>
						</tr>
						<tr>
							<th>{{ 'label.created_at'|transchoice(0)|capitalize }}</th>
							<td>{{ nation.createdAt ? nation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>{{ 'label.updated_at'|transchoice(0)|capitalize }}</th>
							<td>{{ nation.updatedAt ? nation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="d-inline-block mt-2">
		<a href="{{ path('admin_nation_index') }}"><button class="btn d-inline-block">{{ 'label.back_to_list'|transchoice(0)|capitalize }}</button></a>
	</div>

	<div class="d-inline-block mb-4">
		<a href="{{ path('admin_nation_edit', {'nameSlug': nation.nameSlug}) }}"><button class="btn d-inline-block">{{ 'label.edit'|transchoice(0)|capitalize }}</button></a>
	</div>

	{{ include('admin/nation/_delete_form.html.twig') }}
{% endblock %}