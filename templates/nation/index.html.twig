{% extends 'base.html.twig' %}

{% block title %}Nation index{% endblock %}

{% block body %}
    <h1>Nation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>NameSlug</th>
                <th>ImageName</th>
                <th>ImageSize</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nation in nations %}
            <tr>
                <td>{{ nation.id }}</td>
                <td>{{ nation.name }}</td>
                <td>{{ nation.nameSlug }}</td>
                <td>{{ nation.imageName }}</td>
                <td>{{ nation.imageSize }}</td>
                <td>{{ nation.createdAt ? nation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ nation.updatedAt ? nation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('nation_show', {'id': nation.id}) }}">show</a>
                    <a href="{{ path('nation_edit', {'id': nation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('nation_new') }}">Create new</a>
{% endblock %}